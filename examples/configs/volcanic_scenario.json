{
  "name": "volcanic_scenario",
  "description": "Post-volcanic eruption atmosphere with stratospheric sulfate aerosols",
  "atmosphere": {
    "model": "us_standard_1976",
    "surface_pressure": 1013.25,
    "surface_temperature": 288.15,
    "n_layers": 80,
    "top_altitude": 40.0,
    "co2_ppmv": 420.0,
    "o3_column_du": 280.0
  },
  "aerosol": {
    "enabled": true,
    "model": "volcanic",
    "aod_550": 0.25,
    "angstrom_exponent": 1.8,
    "single_scatter_albedo": 0.99,
    "asymmetry_parameter": 0.65,
    "scale_height": 4.0
  },
  "cloud": {
    "enabled": false
  },
  "surface": {
    "albedo": 0.15,
    "surface_type": "grass",
    "emissivity": 0.95
  },
  "solar": {
    "solar_zenith_angle": 30.0,
    "day_of_year": 200
  },
  "spectral": {
    "wavelength_min": 0.3,
    "wavelength_max": 3.0,
    "n_wavelengths": 75
  },
  "solver": {
    "method": "delta_eddington"
  },
  "output": {
    "compute_fluxes": true,
    "compute_heating_rates": true
  }
}
